
@{
    ViewData["Title"] = "Delete";
}
@model ProductosModel

<h2>Eliminar registro</h2>
<h3>¿Estas seguro de eliminar ek siguiente registro?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripcion</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
    <form asp-action="Delete">
        <input asp-for="Id" type="hidden"/>
        <button class="btn btn-danger" type="submit">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>